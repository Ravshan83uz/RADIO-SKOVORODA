<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/Screen1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.radioskovoroda.MainActivity">

    <Button
        android:id="@+id/b_play"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp" />

    <Button
        android:id="@+id/b_switch"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:text="MUSIC"
        android:layout_toRightOf="@+id/button" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_above="@+id/b_play"
        android:layout_alignLeft="@+id/b_play"
        android:layout_alignStart="@+id/b_play"
        android:layout_marginBottom="26dp"
        android:text="RADIO" />


</RelativeLayout>
